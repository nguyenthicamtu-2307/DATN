<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/containerInfor"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <LinearLayout
       android:id="@+id/lnHeader"
       android:orientation="horizontal"
       android:layout_margin="@dimen/_10sdp"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:src="@drawable/ic_back"
           android:layout_marginEnd="@dimen/_90sdp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       <TextView
           android:textColor="@color/primaryColor"
           android:textSize="@dimen/_22ssp"
           android:layout_marginTop="@dimen/_5sdp"
           android:text="Setting"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/lnTT"
        app:layout_constraintTop_toBottomOf="@id/lnHeader"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginStart="@dimen/_100sdp"

            android:src="@drawable/woman1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Nguyễn Thị Cẩm Tú"
            android:layout_marginStart="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="abcd@gmail.com"
            android:layout_marginStart="@dimen/_85sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_15ssp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_30sdp"
        app:layout_constraintTop_toBottomOf="@id/lnTT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/lnTTCN"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:src="@drawable/ic_baseline_person_24"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_19ssp"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/_60sdp"
                android:text="Thông tin cá nhân"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView

                android:src="@drawable/ic_baseline_navigate_next_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:src="@drawable/ic_menu"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_19ssp"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/_40sdp"
                android:text="Điều khoản sử dụng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView

                android:src="@drawable/ic_baseline_navigate_next_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:src="@drawable/ic_history"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_19ssp"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/_55sdp"
                android:text="Lịch sử hoạt động"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView

                android:src="@drawable/ic_baseline_navigate_next_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:src="@drawable/ic_change"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_19ssp"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/_95sdp"
                android:text="Đổi mật khẩu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView

                android:src="@drawable/ic_baseline_navigate_next_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView

                android:src="@drawable/ic_baseline_logout_24"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_19ssp"
                android:textColor="@color/black"
                android:layout_marginEnd="@dimen/_115sdp"
                android:text="Đăng Xuất"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView

                android:src="@drawable/ic_baseline_navigate_next_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>