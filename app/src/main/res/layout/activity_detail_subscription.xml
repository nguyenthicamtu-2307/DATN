<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerFrag"
    tools:context=".View.Canbo.DetailSubscription">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imagedetail" />

                <ImageView
                    android:id="@+id/imBack"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:src="@drawable/ic_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </FrameLayout>
             <TextView
                 android:layout_marginTop="@dimen/_15sdp"
                 android:textSize="@dimen/_25ssp"
                 android:layout_marginStart="@dimen/_10sdp"
                 android:textColor="@color/black"
                 android:textStyle="bold"
                 android:text="Phố cổ hội an sau lũ"
                 android:id="@+id/txtNameSubscription"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"/>
          <LinearLayout
              android:layout_marginTop="@dimen/_10sdp"
              android:layout_marginStart="@dimen/_10sdp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <ImageView
                  android:src="@drawable/ic_calendar"
                  android:layout_marginEnd="@dimen/_15sdp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
              <TextView
                  android:text="20/10/2023"
                  android:textSize="@dimen/_20sdp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
          </LinearLayout>
            <LinearLayout
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Số tiền:"
                    android:textSize="@dimen/_19sdp"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtAmountOfMoney"
                    android:text="5000000"
                    android:textSize="@dimen/_19sdp"
                    android:textColor="@color/primaryColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Số hộ dân:"
                    android:textSize="@dimen/_19sdp"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtHouseHoldNumber"
                    android:text="50"
                    android:textSize="@dimen/_19sdp"
                    android:textColor="@color/primaryColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Danh sách hộ dân hộ dân:"
                    android:textSize="@dimen/_19sdp"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtUrl"
                    android:autoLink="web"
                    android:text="Xem"
                    android:textSize="@dimen/_19sdp"
                    android:textStyle="bold"
                    android:textColor="@color/secondColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Tên cán bộ:"
                    android:textSize="@dimen/_19sdp"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtNameLocalOfficer"
                    android:text="Nguyễn Cam tu"
                    android:textSize="@dimen/_19sdp"
                    android:textColor="@color/primaryColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Nhu yếu phẩm:"
                    android:textSize="@dimen/_19sdp"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtNessessary"
                    android:text="Nguyễn Cam tu"
                    android:textSize="@dimen/_19sdp"
                    android:textColor="@color/primaryColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Trạng Thái:"
                    android:textSize="@dimen/_19sdp"
                    android:textStyle="bold"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/txtStatusSub"
                    android:text="Chưa hoàn thành"
                    android:textSize="@dimen/_19sdp"
                    android:textColor="@color/primaryColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnEdt"
                android:text="Chỉnh sửa"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                android:layout_marginHorizontal="@dimen/_55sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:background="@drawable/button_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>