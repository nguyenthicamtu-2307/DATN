<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Doicuutro.InforRegistrationRescue">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/lnHeaderInforRegistration"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_back"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/_24ssp"
                    android:text="Thông tin đăng kí"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/imgInforRegister"
                app:layout_constraintTop_toBottomOf="@id/lnHeaderInforRegistration"
                android:src="@drawable/imange6"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtTitleRegister"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/_15sdp"
                android:textSize="@dimen/_24ssp"
                android:text="Phố cổ hội an sau lũ"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_20sdp"
                app:layout_constraintTop_toBottomOf="@id/imgInforRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtAdressAid"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Chọn địa điểm cứu trợ"
                android:textColor="@color/primaryColor"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_15sdp"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtTitleRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner

                app:layout_constraintTop_toBottomOf="@id/txtAdressAid"
                android:id="@+id/spinerAddress"
                android:layout_margin="@dimen/_16sdp"
                app:boxCornerRadiusBottomEnd="@dimen/_10sdp"
                app:boxCornerRadiusBottomStart="@dimen/_10sdp"
                app:boxCornerRadiusTopEnd="@dimen/_10sdp"
                app:boxCornerRadiusTopStart="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:background="@drawable/auto_textinput_custom"
                android:inputType="none" />
            <TextView
                android:id="@+id/txtMoneyAid"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Nhập số tiền cứu trợ"
                android:textColor="@color/primaryColor"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_15sdp"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinerAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/edtMoneyAid"
                android:hint="Đơn vị VND"
                android:textColorHint="@color/textcolor"
                android:textStyle="bold"
                android:background="@drawable/edittext_custom"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtMoneyAid"
                android:layout_width="match_parent"
                android:layout_margin="@dimen/_15sdp"
                android:layout_height="@dimen/_40sdp"/>

            <Button
                android:layout_marginStart="@dimen/_70sdp"
                android:id="@+id/btnConfirmRegis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_custom"
                android:fontFamily="sans-serif"
                android:text="Xác Nhận"
                android:layout_marginTop="@dimen/_120sdp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_16ssp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="785dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>