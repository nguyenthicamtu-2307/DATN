<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Donation.InforDonation2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/lnHeaderDonation2"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/ic_back"
                    android:layout_marginEnd="@dimen/_30sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/primaryColor"
                    android:textStyle="bold"
                    android:textSize="@dimen/_20ssp"
                    android:text="Thông tin quyên góp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <TextView
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/txtTitleDonation"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:paddingEnd="@dimen/_15sdp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_20sdp"
                android:textSize="@dimen/_19ssp"
                android:text="Khung cảnh phố cổ tiêu điều vì sông nước "
                app:layout_constraintTop_toBottomOf="@id/lnHeaderDonation2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/imgDonation"
                android:layout_width="333dp"
                android:layout_height="150dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/imagedetail"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtTitleDonation" />
            <LinearLayout
                android:id="@+id/dateChoose"
                app:layout_constraintTop_toBottomOf="@id/imgDonation"
                android:layout_marginTop="@dimen/_15sdp"
                android:padding="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_17ssp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Ngày đăng kí:"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="@dimen/_17ssp"
                    android:textColor="@color/black"
                    android:text="10/01/2023"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/dateDonation"
                app:layout_constraintTop_toBottomOf="@id/dateChoose"
                android:paddingTop="@dimen/_5sdp"
                android:paddingStart="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_17ssp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Ngày quyên góp:"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="@dimen/_17ssp"
                    android:textColor="@color/black"
                    android:text="10/01/2023"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/moneyDonation"
                app:layout_constraintTop_toBottomOf="@id/dateDonation"
                android:paddingStart="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_17ssp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Số tiền:"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="@dimen/_17ssp"
                    android:textColor="@color/primaryColor"
                    android:text="10.000.000 VND    "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/neccessaryDonation"
                app:layout_constraintTop_toBottomOf="@id/moneyDonation"
                android:paddingTop="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:paddingEnd="@dimen/_10sdp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_17ssp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Vật Phẩm:"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="@dimen/_17ssp"
                    android:textColor="@color/primaryColor"
                    android:text="1. 100 thùng mì
                                    2. 100 thùng nước
                                    3. 100 thùng bánh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/statusDonation"
                app:layout_constraintTop_toBottomOf="@id/neccessaryDonation"
                android:paddingTop="@dimen/_15sdp"
                android:paddingStart="@dimen/_10sdp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_17ssp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Trạng thái:"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="@dimen/_17ssp"
                    android:textColor="@color/primaryColor"
                    android:text="Đang chờ "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnUploadDonation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_margin="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/edittext_custom"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.589"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/statusDonation"
                app:layout_constraintVertical_bias="0.053">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"

                    android:layout_marginRight="@dimen/_20sdp"
                    android:backgroundTint="@color/primaryColor"
                    android:src="@drawable/ic_upload" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Upload Minh chứng"
                    android:textAlignment="center"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_40sdp"
                app:layout_constraintTop_toBottomOf="@id/lnUploadDonation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:text="Xác nhận"
                    android:textColor="@color/white"
                    android:fontFamily="serif"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@drawable/confirm_button"
                    android:layout_marginStart="@dimen/_60sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <Button
                    android:text="Hủy"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="serif"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@drawable/cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>