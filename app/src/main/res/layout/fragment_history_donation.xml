<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Donation.MainPage.Fragment.HistoryDonationFragment" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/header"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_5sdp"

                android:layout_height="wrap_content">
                <TextView
                    android:text="Chao Tu"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="@dimen/_200sdp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/ic_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/imageps"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lnSearch"
                app:layout_constraintTop_toBottomOf="@id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_20sdp"
                    android:background="@drawable/search_custom"
                    android:hint="search here"
                    android:minHeight="48dp"
                    android:paddingLeft="@dimen/_15sdp" />
            </LinearLayout>
        <TextView
            android:id="@+id/txtHistory"
            android:textSize="@dimen/_22ssp"
            android:layout_marginStart="@dimen/_10sdp"
            android:textColor="@color/primaryColor"
            android:textStyle="bold"
            android:text="Lịch sử quyên góp"
            app:layout_constraintTop_toBottomOf="@id/lnSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvListRelief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>