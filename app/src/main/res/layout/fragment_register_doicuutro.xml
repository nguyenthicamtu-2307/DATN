<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Register.Register_doicuutro">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/tvEmailDCT"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_15sdp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edittext_custom"
        android:hint="Email"
        android:textColorHint="@color/textcolor"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.029" />

    <EditText
        android:id="@+id/edtMatKhaulDCT"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_15sdp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edittext_custom"
        android:hint="Mật Khẩu"
        android:textColorHint="@color/textcolor"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEmailDCT"
        app:layout_constraintVertical_bias="0.029" />

    <EditText
        android:id="@+id/edtNameUser"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_15sdp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edittext_custom"
        android:hint="Họ tên người dùng"
        android:textColorHint="@color/textcolor"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtMatKhaulDCT"
        app:layout_constraintVertical_bias="0.029" />

    <EditText
        android:id="@+id/edtNameDCT"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_15sdp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edittext_custom"
        android:hint="Tên đội cứu trợ"
        android:textColorHint="@color/textcolor"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtMatKhaulDCT"
        app:layout_constraintVertical_bias="0.029" />

    <EditText
        android:id="@+id/edtLeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_margin="@dimen/_15sdp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edittext_custom"
        android:hint="Tên trưởng nhóm"
        android:textColorHint="@color/textcolor"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtMatKhaulDCT"
        app:layout_constraintVertical_bias="0.029" />

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>